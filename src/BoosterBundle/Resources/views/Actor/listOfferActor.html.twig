{% extends 'base.html.twig' %}

{% block body %}
<h1>Liste des Offres</h1>
{% for offer in offers %}
<a href="{{ path('actor_showOffer', { 'id': offer.id }) }}" id="lienListe">
    <div class="row">
        <section class="col-sm-offset-1 col-sm-10 col-xs-12 backWhite sec1 padSHOW">
            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <img src="{{ app.request.basepath }}/uploads/{{ offer.imageOffer }}" alt="photo_logo" class="center-block img-responsive imgSHOW"/>
                </div>
                <div class="col-md-6 col-xs-12">
                    <h1>{{ offer.title }}</h1>
                    <ul>
                        <div class="row">
                            <li class="col-md-6 col-xs-12"><span>Ville :</span>{{ offer.town }}</li>
                            <li class="col-md-6 col-xs-12"><span>Code Postal :</span>{{ offer.cp }}</li>
                        </div>
                        <div class="row">
                            <li class="col-md-6 col-xs-12"><span>Domaine d'activit√© :</span>{{ offer.activity }}</li>
                            <li class="col-md-6 col-xs-12"><span>Souhait :</span>{{ offer.wish }}</li>
                        </div>
                        <li><span>Description :</span>{{ offer.description }}</li>
                    </ul>
                </div>
            </div>
        </section>
    </div>
</a>

{% endfor %}

{% endblock %}