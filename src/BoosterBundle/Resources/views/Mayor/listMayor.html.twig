{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Villages</h1>
    <div class="row">
        <div class="col-sm-offset-1 col-sm-10 col-xs-12">
            <form>
                <div class="form-group">
                    <input class="form-control ombreMoteur" placeholder="Rechercher..." type="text" id="search2"> <!--id return in recherchejQuery.js-->
                </div>
            </form>
        </div>
    </div>
    {% for user in user %}
        <a href="#" id="lienListe">
            <div class="row">
                <section class="col-sm-offset-1 col-sm-10 col-xs-12 backWhite sec1 listIndex filtre2">
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <img src="{{ app.request.basepath }}/uploads/{{ user.imageIdentity }}" alt="photo_logo" class="center-block img-responsive imgList"/>
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <h2>{{ user.town }}</h2>
                            <div class="row">
                                <div class="col-sm-6 col-xs-12">
                                    <ul>
                                        <li><span>Adresse de la Mairie :</span> {{ user.address }}</li>
                                    </ul>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                    <ul>
                                        <li><span>Code Postal :</span> {{ user.cp }}</li>
                                    </ul>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                    <ul>
                                        <li><span>Téléphone de la Mairie :</span><p> {{ user.phone }}</p></li>
                                    </ul>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                    <ul>
                                        <li><span>Mail de la Mairie :</span><p> {{ user.email }}</p></li>
                                    </ul>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                    <ul>
                                        <li><span>Site Web de la Mairie :</span><p> {{ user.website }}</p></li>
                                    </ul>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                    <ul>
                                        <li><span>Nom du Maire :</span><p> {{ user.lastname }}</p></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </a>
    {% endfor %}

    {#*******************************************JAVASCRIPT FOR THIS PAGE *************************************************#}

    <script src="http://thecodeplayer.com/uploads/js/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>
    <script src="{{ asset('bundles/booster/js/recherchejQuery.js') }}"></script
{% endblock %}