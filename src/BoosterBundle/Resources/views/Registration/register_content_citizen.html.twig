{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form ':form_template:bootstrap.html.twig' %}

{% block body %}
<div class="background_form_citizen">
    {{ form_start(form, {'method': 'post', 'action': path('booster_registerCitizen'), 'attr': {'class': 'fos_user_registration_register'}}) }}


    {{ form_label(form.lastname) }}
    {{ form_widget(form.lastname) }}

    {{ form_label(form.firstname) }}
    {{ form_widget(form.firstname) }}

    {{ form_widget(form) }}

    <br/>
    <div class="btn_register_citizen">
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-default btn_form_citizen" />
    </div>
    {{ form_end(form) }}
</div>
{% endblock body %}
