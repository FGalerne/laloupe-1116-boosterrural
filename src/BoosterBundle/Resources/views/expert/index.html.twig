{% extends 'base.html.twig' %}

{% block body %}
    <h1>Nos Experts</h1>
    <div class="row">
        <div class="col-sm-offset-1 col-sm-10 col-xs-12 project">
            <p>
                Pour <strong>« Ensemble le Booster rural »</strong> les Experts appartiennent aux professions juridiques, notariales, immobilières, d’ingénierie territoriale en environnement  et en ingénierie de réseaux.
            </p>

            {% for expert in experts %}
                <div class="row downMarg2">
                    <div class="col-xs-3">
                        <img src="{{ app.request.basepath }}/uploads/{{ expert.imageExperts }}" alt="photo_expert" class="img-responsive" width="">
                    </div>
                    <div class="col-xs-9">
                        <p>{{ expert.expertText }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
