{% extends 'base.html.twig' %}

{% block body %}
    <h1>Partners list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Partnertext</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td><a href="{{ path('partners_show', { 'id': partner.id }) }}">{{ partner.id }}</a></td>
                <td>{{ partner.partnerText }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('partners_show', { 'id': partner.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('partners_edit', { 'id': partner.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('partners_new') }}">Create a new partner</a>
        </li>
    </ul>
{% endblock %}
