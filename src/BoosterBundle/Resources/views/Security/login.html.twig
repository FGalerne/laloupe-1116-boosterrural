{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}{% trans_default_domain 'FOSUserBundle' %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row">
        <div class="col-sm-offset-2 col-sm-8 col-xs-12  ">
            <div class="row">
                <div class="col-sm-offset-3 col-sm-6">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div class="form-group row">

                            <label for="username" class="col-xs-3 col-form-label">{{ 'security.login.username'|trans }}</label>*
                            <div class="col-xs-9">
                                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
                            </div>

                            <label for="password" class="col-xs-3 col-form-label">{{ 'security.login.password'|trans }}</label>
                            <div class="col-xs-9">
                                <input type="password" id="password" name="_password" required="required" class="form-control" />
                            </div>
                        </div>

                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me" class="successButton">{{ 'security.login.remember_me'|trans }}</label>

                            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-success center-block successButton" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock fos_user_content %}
