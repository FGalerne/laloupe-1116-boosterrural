{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <section class="col-sm-offset-1 col-sm-10 col-xs-12 backWhite sec1 padSHOW">
            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <img src="{{ app.request.basepath }}/uploads/{{ need.imageNeeds }}" alt="photo_logo" class="center-block img-responsive imgSHOW"/>
                </div>
                <div class="col-md-6 col-xs-12">
                    <h1>{{ need.title }}</h1>
                    <ul>
                        <div class="row">
                            <li class="col-md-3 col-xs-12"><span>Ville :</span>{{ need.town }}</li>
                            <li class="col-md-4 col-xs-12"><span>Code Postal :</span>{{ need.cp }}</li>
                            <li class="col-md-5 col-xs-12"><span>Disponibilité :</span>{{ need.availability }}</li>
                        </div>
                        <div class="row">
                            <li class="col-md-7 col-xs-12"><span>Domaine d'activité :</span>{{ need.activity }}</li>
                            <li class="col-md-5 col-xs-12"><span>Je recherche :</span>{{ need.wish }}</li>
                        </div>
                        <li><span>Description :</span>{{ need.description }}</li>
                    </ul>
                </div>
            </div>
        </section>
    </div>

    <a href="{{ path('citizen_listNeed') }}" class="btn center-block1 Button">Retour à la liste</a>

{% endblock %}
