{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Offres pour les Villages</h1>
    <div class="row">
        <div class="col-sm-offset-1 col-sm-10 col-xs-12">
            <form>
                <div class="form-group">
                    <input class="form-control ombreMoteur" placeholder="Rechercher..." type="text" id="search2"> <!--id return in recherchejQuery.js-->
                </div>
            </form>
        </div>
    </div>
    {% for offer in offers %}
        <a href="{{ path('mayor_showOffer', { 'id': offer.id }) }}" id="lienListe">
            <div class="row">
                <section class="col-sm-offset-1 col-sm-10 col-xs-12 backWhite sec1 listIndex filtre2">
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            {% if offer.imageOffer != NULL %}
                                <img src="{{ app.request.basepath }}/uploads/{{ offer.imageOffer }}" alt="photo_logo" class="center-block img-responsive imgList"/>
                            {% else %}
                                <img src="{{ asset('bundles/booster/img/nophoto.png') }}" alt="photo_logo" class="center-block img-responsive imgList"/>
                            {% endif %}
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <h2>{{ offer.title }}</h2>
                            <div class="row">
                                <div class="col-sm-6 col-xs-12">
                                    <ul>
                                        <li><span>Nom de la Commune :</span> {{ offer.town }}</li>
                                    </ul>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                    <ul>
                                        <li><span>Code Postal :</span> {{ offer.cp }}</li>
                                    </ul>
                                </div>
                                <div class="col-sm-12 col-xs-12">
                                    <ul>
                                        <li><span>Description de l'Offre :</span><p> {{ offer.description[:300]}} ...</p></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </a>
    {% endfor %}

    {#*******************************************JAVASCRIPT FOR THIS PAGE *************************************************#}

    <script src="http://thecodeplayer.com/uploads/js/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>
    <script src="{{ asset('bundles/booster/js/recherchejQuery.js') }}"></script>
{% endblock %}